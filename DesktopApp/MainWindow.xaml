                    <Label x:Name="tiPicturePictureName" FontFamily="Bahnschrift" FontSize="14" Content="" HorizontalAlignment="Left" Margin="613,336,0,0" VerticalAlignment="Top" Width="144"/>
                    <TextBlock HorizontalAlignment="Left" FontFamily="Bahnschrift" FontSize="14" Margin="10,0,0,0" TextWrapping="Wrap" Text="Bilder in Bytecode umwandeln und in Zwischenablage kopieren" VerticalAlignment="Center" Height="180" Width="126"/>
